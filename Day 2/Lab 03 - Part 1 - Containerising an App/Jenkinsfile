pipeline {  
  environment {
    registry = "yogendra/piper-2020-day-2-lab-3"
    registryCredential = 'dockerhub'
  }  
  agent any  
  stages {
    // git url: 'https://github.com/yogendra/Piper-2020.git'
    stage('Checkout'){
         checkout scm
    }
    stage('Building image') {
      steps{
        script {
          docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
  }
}
